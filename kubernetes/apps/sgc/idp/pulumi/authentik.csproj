<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net10.0</TargetFramework>
    <LangVersion>preview</LangVersion>
    <Nullable>enable</Nullable>
    <NoWarn>$(NoWarn);CS0436</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Dumpify" Version="0.6.6" />
    <PackageReference Include="Humanizer.Core" Version="2.14.1" />
    <PackageReference Include="Pulumi" Version="3.*" />
    <PackageReference Include="Pulumi.Kubernetes" Version="4.23.0" />
    <PackageReference Include="KubernetesClient" Version="17.0.4" />
    <PackageReference Include="Riok.Mapperly" Version="4.2.1" />
    <Compile Remove="sdks/**/*.*" />
    <Compile Remove="crds/**/*.*" />
    <None Include="../../../../../schemas/**/*.json" LinkBase="schemas" />
    <PackageReference Include="Rocket.Surgery.OnePasswordNativeUnofficial" Version="0.0.33" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="sdks\authentik\Pulumi.Authentik.csproj" />
    <ProjectReference Include="sdks\uptimekuma\Pulumi.Uptimekuma.csproj" />
    <ProjectReference Include="crds/dotnet/Pulumi.Crds.csproj" />
  </ItemGroup>

</Project>
