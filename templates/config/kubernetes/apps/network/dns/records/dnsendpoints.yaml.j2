---
apiVersion: externaldns.k8s.io/v1alpha1
kind: DNSEndpoint
metadata:
  name: external-dns
  namespace: kube-system
spec:
  endpoints:
    - dnsName: "${EXTERNAL_DOMAIN}"
      recordType: A
      targets: ["${EXTERNAL_IP}"]
      # providerSpecific:
      # - name: external-dns.alpha.kubernetes.io/cloudflare-proxied
      #   value: "true"
---
apiVersion: externaldns.k8s.io/v1alpha1
kind: DNSEndpoint
metadata:
  name: internal-dns
spec:
  endpoints:
    - dnsName: "${INTERNAL_DOMAIN}"
      recordType: A
      targets: ["${INTERNAL_IP}"]
